<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="16dp"
    tools:context="ratemyapp.jagerfield.ratemyapp.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="App data"
            style="@style/MainTitlesTextView"/>

        <Button
            android:id="@+id/button"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:text="Evaluate"
            android:textColor="@color/purple"
            android:background="@drawable/layout_rounded_corners"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <CheckBox
            android:id="@+id/editCurrentTimeTitleCb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit current time"
            style="@style/TitlesTextView"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/currentDateTv"
                style="@style/DatesTextView"
                android:textColor="@color/greytext"/>

            <TextView
                android:id="@+id/currentTimeTv"
                style="@style/TimesTextView"
                android:textColor="@color/greytext"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TextView
            style="@style/TitlesTextView"
            android:text="Edit App Installation Time : " />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/appInstallationDateTv"
                style="@style/DatesTextView" />

            <TextView
                android:id="@+id/appInstallationTimeTv"
                style="@style/TimesTextView" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TextView
            style="@style/TitlesTextView"
            android:text="Edit Usage count : " />

        <TextView
            android:id="@+id/usageCountTv"
            style="@style/CountersTextView" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TextView
            style="@style/TitlesTextView"
            android:text="Edit Last usage date : " />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lastUsageDateTv"
                style="@style/DatesTextView" />

            <TextView
                android:id="@+id/lastUsageTimeTv"
                style="@style/TimesTextView" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TextView
            style="@style/TitlesTextView"
            android:text="Edit Rating status : " />

        <TextView
            android:id="@+id/ratingStatusTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Not Asked"
            android:textColor="@color/red" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TextView
            style="@style/TitlesTextView"
            android:text="Edit Ask me later date : " />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/askMeLaterDateTv"
                style="@style/DatesTextView" />

            <TextView
                android:id="@+id/askMeLaterTimeTv"
                style="@style/TimesTextView" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="@color/greymedium"
        android:orientation="vertical" />

    <TextView
        style="@style/MainTitlesTextView"
        android:text="User activation settings" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <TextView
            style="@style/TitlesTextView"
            android:text="Edit Activation time : " />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activationDateTv"
                style="@style/DatesTextView" />

            <TextView
                android:id="@+id/activationTimeTv"
                style="@style/TimesTextView" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TextView
            style="@style/TitlesTextView"
            android:text="Edit Activation usage count : " />

        <TextView
            android:id="@+id/activationUsageTv"
            style="@style/CountersTextView" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TextView
            style="@style/TitlesTextView"
            android:text="Usage Count Period Separation : " />

        <TextView
            android:id="@+id/usageCountPeriodSeparationTv"
            style="@style/CountersTextView" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="@color/greymedium"
        android:orientation="vertical" />

    <TextView
        style="@style/MainTitlesTextView"
        android:text="Current time and usage status" />



</LinearLayout>
