<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@drawable/rounded_rectangle"
    android:layout_margin="0dp">

    <ImageView
        android:id="@+id/dialog_rating_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/dialog_rating_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_rating_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Thanks for using the app"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/dialog_rating_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_rating_title"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="If you are finding it useful, would you kindly rate it on GooglePlay"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:visibility="visible" />

    <EditText
        android:id="@+id/dialog_rating_feedback"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/dialog_rating_description"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_background"
        android:gravity="top|left"
        android:inputType="textMultiLine|textCapSentences"
        android:lines="8"
        android:maxLines="10"
        android:minLines="6"
        android:padding="10dp"
        android:scrollbars="vertical"
        android:textColorHint="@color/grey_400"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/dialog_rating_buttons"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rate_button_height"
        android:layout_below="@id/dialog_rating_description"
        android:layout_marginTop="24dp"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/dialog_rating_button_dont_ask_again"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_dont_ask_again"
            android:clickable="true"
            android:gravity="center"
            android:text="No"
            android:textColor="@color/greymedium"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dialog_rating_button_ask_me_later"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_ask_me_later"
            android:clickable="true"
            android:gravity="center"
            android:text="Later"
            android:textColor="@color/greymedium"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dialog_rating_button_ok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_ok"
            android:clickable="true"
            android:gravity="center"
            android:text="Sure"
            android:textColor="@color/greymedium"
            android:textSize="15sp" />

    </LinearLayout>

</RelativeLayout>